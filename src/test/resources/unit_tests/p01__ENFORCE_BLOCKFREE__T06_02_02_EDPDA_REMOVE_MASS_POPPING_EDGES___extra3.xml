    <string_symbol id="event_a" string="a"/>
    <string_symbol id="box" string="☐"/>
    <string_symbol id="bullet" string="•"/>
    <string_symbol id="state_0" string="q0"/>
    <string_symbol id="state_1" string="q1"/>

    <epda_step_label id="edge_0" edge_src="state_0" edge_event="event_a" edge_pop="box"
                     edge_push="bullet bullet bullet box" edge_trg="state_1"/>
    <epda_step_label id="edge_1" edge_src="state_1" edge_event="event_a" edge_pop="bullet bullet bullet box"
                     edge_push="box" edge_trg="state_0"/>

    <epda
            id="input"
            epda_states="state_0 state_1"
            epda_events="event_a"
            epda_gamma="box bullet"
            epda_delta="edge_0 edge_1"
            epda_initial="state_0"
            epda_eos="box"
            epda_marking="state_1"/>

</root>

            id="spec"
            epda_states="state_q1 state_q2 state_q3 state_q4"
            epda_events="event_r event_F event_S event_B1 event_B2 event_A"
            epda_gamma="box bullet circ"
            epda_delta="edge_spec_0 edge_spec_1 edge_spec_2 edge_spec_3 edge_spec_4 edge_spec_5 edge_spec_6 edge_spec_7 edge_spec_8 edge_spec_9 edge_spec_10 edge_spec_11 edge_spec_12 edge_spec_13 edge_spec_14 edge_spec_15 edge_spec_16 edge_spec_17 edge_spec_18"
            epda_initial="state_q1"

            epda_delta="edge_plant1_0 edge_plant1_1 edge_plant1_2 edge_plant1_3 edge_plant1_4 edge_plant1_5 edge_plant1_6 edge_plant1_7 edge_plant1_8"
            epda_initial="state_pA"
